        this.descricao = descricao;
        this.casosTeste = casosTeste;
    }

    // Getters e Setters
}
Classe CasoTeste
java

public class CasoTeste {
    private String descricao;
    private String passos;
    private String dados;
    private String preCondicoes;
    private String posCondicoes;

    public CasoTeste(String descricao, String passos, String dados, String preCondicoes, String posCondicoes) {
        this.descricao = descricao;
        this.passos = passos;
        this.dados = dados;
        this.preCondicoes = preCondicoes;
        this.posCondicoes = posCondicoes;
    }

    // Getters e Setters
}
Classe MindMap
java

public class MindMap {
    private String userStoryRelacionada;
    private String descricao;
    private List<String> subtopicos;

    public MindMap(String userStoryRelacionada, String descricao, List<String> subtopicos) {
        this.userStoryRelacionada = userStoryRelacionada;
        this.descricao = descricao;
        this.subtopicos = subtopicos;
    }

    // Getters e Setters
}
