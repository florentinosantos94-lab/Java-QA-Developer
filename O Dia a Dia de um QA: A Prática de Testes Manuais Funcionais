Classe UserStory
java

public class UserStory {
    private String descricao;
    private String epic;
    private String motivo;
    private List<String> criteriosAceitacao;

    public UserStory(String descricao, String epic, String motivo, List<String> criteriosAceitacao) {
        this.descricao = descricao;
        this.epic = epic;
        this.motivo = motivo;
        this.criteriosAceitacao = criteriosAceitacao;
    }

    // Getters e Setters
}
Classe PlanoTestes
